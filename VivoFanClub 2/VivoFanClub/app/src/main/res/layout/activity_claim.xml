<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Claim_Activity">
    <!--Layout one-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:background="@color/light_background"
        android:gravity="center"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:visibility="visible">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/banner"
                tools:ignore="ContentDescription" />
        </FrameLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black" />

    <!--Layout two-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp">

            <!--Input Fields-->
            <LinearLayout
                android:id="@+id/numberLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <!--Number-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/numberInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/light_background"
                    android:hint="Contact Number"
                    app:boxStrokeColor="@color/light_background"
                    app:boxStrokeWidth="1dp"
                    app:hintTextColor="@color/light_background"
                    app:startIconDrawable="@drawable/ic_contact_no"
                    app:startIconTint="@color/light_background">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNumberField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLength="10" />

                </com.google.android.material.textfield.TextInputLayout>

                <!--Send OTP Button-->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSendOtp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="2.5"
                    android:background="@drawable/btn_primary"
                    android:padding="15dp"
                    android:text="Send OTP"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/otpLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <!--OTP-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/otpInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/light_background"
                    android:hint="OTP"
                    app:boxStrokeColor="@color/light_background"
                    app:boxStrokeWidth="1dp"
                    app:hintTextColor="@color/light_background"
                    app:startIconDrawable="@drawable/ic_otp"
                    app:startIconTint="@color/light_background">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etOtpField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLength="6" />

                </com.google.android.material.textfield.TextInputLayout>

                <!--Verify Button-->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnVerifyOtp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="2.5"
                    android:background="@drawable/btn_primary"
                    android:padding="15dp"
                    android:text="Verify"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/verifiedLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="horizontal"
                android:padding="5dp"
                android:visibility="gone"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_verified"
                    app:tint="@color/verified_color" />

                <TextView
                    android:id="@+id/tvVerified"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Verified"
                    android:textColor="@color/textColor"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/notVerifiedLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="horizontal"
                android:padding="5dp"
                android:visibility="gone"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_not_verified"
                    app:tint="@color/light_background" />

                <TextView
                    android:id="@+id/tvNotVerified"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Not a Valid IMEI"
                    android:textColor="@color/textColor"
                    android:textStyle="bold" />
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:padding="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <TableLayout
                    android:id="@+id/details_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="1"
                    android:paddingBottom="8dp"
                    android:visibility="gone">

                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Full Name:"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:paddingEnd="8dp"
                            android:paddingLeft="10dp"/>

                        <TextView
                            android:id="@+id/tvFullName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="John Doe"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:paddingLeft="10dp"/>
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="IMEI Number:"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:paddingEnd="8dp"
                            android:paddingLeft="10dp"/>

                        <TextView
                            android:id="@+id/tvImeiNumber"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="123456789012345"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:paddingLeft="10dp"/>
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Address:"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:paddingEnd="8dp"
                            android:paddingLeft="10dp"/>

                        <TextView
                            android:id="@+id/tvAddress"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="123 Main Street, City Name"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:paddingLeft="10dp"/>
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PIN Code:"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:paddingEnd="8dp"
                            android:paddingLeft="10dp"/>

                        <TextView
                            android:id="@+id/tvPinCode"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="123456"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:paddingLeft="10dp"/>
                    </TableRow>

                </TableLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvTimer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="end"
                android:text="Timer"
                android:textColor="@color/textColor"
                android:visibility="gone" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/aadharInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/light_background"
                android:hint="Aadhar Number"
                app:boxStrokeColor="@color/light_background"
                app:boxStrokeWidth="1dp"
                app:hintTextColor="@color/light_background"
                app:startIconDrawable="@drawable/ic_imei_no"
                app:startIconTint="@color/light_background">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etAadharField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:longClickable="false"
                    android:maxLength="12" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/curve_background_outline"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:gravity="start|center"
                    android:padding="5dp"
                    android:text="Aadhar Card Front"
                    android:textColor="@color/black"
                    app:drawableStartCompat="@drawable/ic_pin_code"
                    app:drawableTint="@color/light_background" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/addAadharFrontImgBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_primary"
                    android:maxLines="2"
                    android:padding="5dp"
                    android:text="Add Aadhar Front"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/curve_background_outline"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:gravity="start|center"
                    android:padding="5dp"
                    android:text="Aadhar Card Back"
                    android:textColor="@color/black"
                    app:drawableStartCompat="@drawable/ic_pin_code"
                    app:drawableTint="@color/light_background" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/addAadharBackImgBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_primary"
                    android:maxLines="2"
                    android:padding="5dp"
                    android:text="Add Aadhar Back"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/panInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/light_background"
                android:hint="Pan Number"
                app:boxStrokeColor="@color/light_background"
                app:boxStrokeWidth="1dp"
                app:hintTextColor="@color/light_background"
                app:startIconDrawable="@drawable/ic_imei_no"
                app:startIconTint="@color/light_background">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPanField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:longClickable="false"
                    android:maxLength="10" />

            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/curve_background_outline"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:gravity="start|center"
                    android:padding="5dp"
                    android:text="Pan Card"
                    android:textColor="@color/black"
                    app:drawableStartCompat="@drawable/ic_pin_code"
                    app:drawableTint="@color/light_background" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/addPanImgBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_primary"
                    android:maxLines="2"
                    android:padding="5dp"
                    android:text="Add Pan Card"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_primary"
                android:padding="15dp"
                android:text="Continue >>"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <!--Button Get Location -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonGetCurrentLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_primary"
                android:padding="15dp"
                android:text="Get Current Location"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvLatLong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />


        </LinearLayout>

    </ScrollView>
</LinearLayout>